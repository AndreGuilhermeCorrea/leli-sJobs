<TelaDoisScreen>:
  
    MDCard:
        size_hint: None, None
        size: 280, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: "vertical"
        
        MDFloatLayout:
            orientation:'vertical'
            
            Image:
                source: "pictures/leli2.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: 280, 500

            MDIconButton:
                icon_size: "34sp"
                pos_hint: {"center_x": .85, "center_y": .9}
                icon:"logout"
                on_release: root.sair() 

            MDFloatLayout:
                size_hint: .60, .25
                focus_behavior: True            
                pos_hint: {"center_x": .30, "center_y": .50}
                
                MDIconButton: 
                    pos_hint: {"center_x": .5, "center_y": .6}
                    icon: "account-hard-hat-outline" 
                    icon_size: "64sp" 
                    on_release: root.tela_servicos()        
            
                MDLabel:
                    text:"Freelancer"
                    theme_text_color: "Custom"
                    text_color: 51/255, 51/255, 51/255, 1
                    font_size: "22sp"
                    halign: "center"
                    adaptive_size: True
                    bold: True
                    pos_hint: {"center_x": .5, "center_y": .1}            
        
            MDFloatLayout:
                size_hint: .60, .25
                focus_behavior: True
                pos_hint: {"center_x": .7, "center_y": .50}

                MDIconButton: 

                    pos_hint: {"center_x": .5, "center_y": .6}
                    icon: "account-circle-outline"
                    icon_size: "64sp"
                    on_release: root.tela_servicos()
                
                MDLabel:
                    text:"Usu√°rio"
                    theme_text_color: "Custom"
                    text_color: 51/255, 51/255, 51/255, 1
                    font_size: "22sp"
                    halign: "center"
                    adaptive_size: True
                    bold: True
                    pos_hint: {"center_x": .5, "center_y": .1}                                         
                    
            MDFloatLayout:
                size_hint: .60, .25
                background_color: 0, 0, 0, 0
                pos_hint: {"center_x": .5, "center_y": .3}                        
                
                MDIconButton: 
                    icon_size: "40sp"
                    pos_hint: {"center_x": .5, "center_y": .1}
                    icon:"pan-left"
                    on_release: root.tela_login()                                  
