<EditarPerfilScreen>:
  
    MDCard:
        size_hint: None, None
        size: 280, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        orientation: "vertical"
        
        MDFloatLayout:
            orientation:'vertical'
            
            Image:
                source: "pictures/leli2.png"
                pos_hint: {"center_x": 0.5, "center_y": 0.5}
                size: 280, 500

            MDIconButton: 
                icon_size: "34sp"
                pos_hint: {"center_x": .85, "center_y": .9}
                icon:"logout"
                on_release: root.sair()                 

            MDCard:
                radius: 30, 30, 30, 30
                size_hint: .38, .23
                orientation:'vertical'
                shadow_softness: 9
                shadow_offset: (3, -3)
                elevation: 3
                pos_hint: {"center_x": .30, "center_y": .6}
                
                MDIconButton: 

                    pos_hint: {"center_x": .5, "center_y": .7}
                    icon: "account-tie"
                    icon_size: "52sp"
                    on_release: root.tela_servicos()
                
                MDLabel:
                    font_size: "13sp"
                    text:"Editar perfil Profissional"
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": 4}            
      
            MDCard:
                radius: 30, 30, 30, 30
                size_hint: .38, .23
                orientation:'vertical'
                shadow_softness: 9
                shadow_offset: (3, -3)
                elevation: 3
                pos_hint: {"center_x": .7, "center_y": .6}

                MDIconButton: 

                    pos_hint: {"center_x": .5, "center_y": .7}
                    icon: "account-circle"
                    icon_size: "52sp"
                    on_release: root.cadastrar()
                
                MDLabel:
                    font_size: "13sp"
                    text:"Editar perfil de Usu√°rio"
                    halign: "center"
                    pos_hint: {"center_x": .5, "center_y": .4}                                          
                    
            MDFloatLayout:
                size_hint: .60, .25
                pos_hint: {"center_x": .5, "center_y": .3}                        
                
                MDIconButton: 
                    icon_size: "40sp"
                    pos_hint: {"center_x": .5, "center_y": .1}
                    icon:"pan-left"
                    on_release: root.tela_servicos()           
